# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TEMPERATURE=iot_temperature
KAFKA_TOPIC_HUMIDITY=iot_humidity
KAFKA_TOPIC_MOTION=iot_motion

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=iot_db
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=iot_password

# PostgreSQL Superuser (for initial setup)
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=postgres

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=iot-pipeline-token-2024
INFLUXDB_ORG=iot_org
INFLUXDB_BUCKET=iot_bucket

# Flink Configuration
FLINK_PARALLELISM=2
FLINK_STATE_PATH=/tmp/flink-checkpoints

# Sensor Configuration
NUM_SENSORS=5
SAMPLING_INTERVAL=1.0

# Alert Thresholds
TEMP_HIGH_THRESHOLD=28.0
TEMP_LOW_THRESHOLD=18.0
HUMIDITY_HIGH_THRESHOLD=65.0
HUMIDITY_LOW_THRESHOLD=35.0

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin 